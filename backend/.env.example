# Database
DATABASE_URL=postgresql://user:password@localhost:5432/inventory_db

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=86400
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_in_production
JWT_REFRESH_EXPIRATION=604800

# API
API_PORT=3000
API_VERSION=v1
NODE_ENV=development
API_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:5500

# Email - SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password
EMAIL_FROM=noreply@tudominio.com
ADMIN_EMAIL=admin@tudominio.com

# WhatsApp - Twilio
WHATSAPP_API_KEY=your_api_key
WHATSAPP_ACCOUNT_SID=your_account_sid
WHATSAPP_AUTH_TOKEN=your_auth_token
ADMIN_WHATSAPP=+573116579677

# AWS S3 / CDN
AWS_S3_BUCKET=inventory-bucket
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
CDN_URL=https://cdn.tudominio.com

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=5000
DB_SSL=false

# Logging
LOG_LEVEL=debug
LOG_FILE=/var/log/inventory-app/app.log
SENTRY_DSN=

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCK_TIME=15
FORCE_HTTPS=false
ENABLE_HELMET=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache - Redis (Opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# Configuration
DEFAULT_CURRENCY=COP
TIMEZONE=America/Bogota
DEFAULT_COUNTRY=CO

# Stripe / PayPal (Futura integraci√≥n)
STRIPE_SECRET_KEY=sk_test_
PAYPAL_CLIENT_ID=your_client_id
