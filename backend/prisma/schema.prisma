// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== ENUMS =====
enum UserRole {
  ADMIN
  CLIENTE
}

enum OrderStatus {
  PENDIENTE
  EN_PREPARACION
  ENTREGADO
  CANCELADO
}

// ===== MODELS =====

/// Usuario del sistema (Admin o Cliente)
model User {
  id        String     @id @default(cuid())
  nombre    String
  email     String     @unique
  password  String
  telefono  String?
  rol       UserRole   @default(CLIENTE)
  activo    Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  ordenes Order[]
  direcciones Address[]
  movimientosStock StockMovement[]
  carrito Cart?

  @@index([email])
  @@map("users")
}

/// Categoría de productos
model Category {
  id        String    @id @default(cuid())
  nombre    String    @unique
  descripcion String?
  icono     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  productos Product[]

  @@map("categories")
}

/// Producto del inventario
model Product {
  id          String    @id @default(cuid())
  nombre      String
  descripcion String?
  precio      Int       // Precio en centavos de COP (ej: 2250000 = $22.500 COP)
  stock       Int       @default(0)
  activo      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Foreign keys
  categoriaId String
  categoria   Category  @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  // Relations
  orderItems OrderItem[]
  imagenes ProductImage[]
  movimientosStock StockMovement[]
  carritoItems CartItem[]

  @@index([categoriaId])
  @@index([nombre])
  @@map("products")
}

/// Dirección de entrega del usuario
model Address {
  id               String   @id @default(cuid())
  calle            String
  numero           String
  apartamento      String?
  ciudad           String
  departamento     String
  codigoPostal     String?
  pais             String   @default("Colombia")
  detallesAdicionales String?
  esPrincipal      Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Foreign keys
  usuarioId String
  usuario   User     @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  // Relations
  ordenes   Order[]

  @@index([usuarioId])
  @@map("addresses")
}

/// Carrito de compras del usuario
model Cart {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  usuarioId String @unique
  usuario   User   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  // Relations
  items CartItem[]

  @@index([usuarioId])
  @@map("carts")
}

/// Item en el carrito
model CartItem {
  id        String   @id @default(cuid())
  cantidad  Int
  precioUnitario Int // Precio al momento de agregar al carrito
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Foreign keys
  carritoId String
  carrito   Cart     @relation(fields: [carritoId], references: [id], onDelete: Cascade)

  productoId String
  producto   Product  @relation(fields: [productoId], references: [id], onDelete: Restrict)

  @@unique([carritoId, productoId])
  @@index([carritoId])
  @@index([productoId])
  @@map("cart_items")
}

/// Imagen del producto
model ProductImage {
  id        String   @id @default(cuid())
  url       String
  orden     Int      @default(0)
  principal Boolean  @default(false)
  createdAt DateTime @default(now())

  // Foreign keys
  productoId String
  producto   Product  @relation(fields: [productoId], references: [id], onDelete: Cascade)

  @@index([productoId])
  @@map("product_images")
}

/// Movimiento de inventario (entrada/salida/ajuste)
model StockMovement {
  id        String   @id @default(cuid())
  tipo      String   // "ENTRADA", "SALIDA", "DEVOLUCIÓN", "AJUSTE"
  cantidad  Int
  razon     String   // "Venta", "Devolución", "Ajuste manual", "Reposición", etc
  referencia String? // Ej: número de orden si es por venta
  createdAt DateTime @default(now())

  // Foreign keys
  productoId String
  producto   Product  @relation(fields: [productoId], references: [id], onDelete: Restrict)

  usuarioId  String?
  usuario    User?    @relation(fields: [usuarioId], references: [id], onDelete: SetNull)

  @@index([productoId])
  @@index([usuarioId])
  @@map("stock_movements")
}

/// Orden (Pedido) del cliente
model Order {
  id        String      @id @default(cuid())
  numero    String      @unique // Ej: PED-1234567890
  total     Int         // Total en centavos de COP
  estado    OrderStatus @default(PENDIENTE)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  entregaEn DateTime?
  notasEntrega String?

  // Foreign keys
  usuarioId String
  usuario   User        @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  direccionId String?
  direccion   Address?   @relation(fields: [direccionId], references: [id], onDelete: SetNull)

  // Relations
  items     OrderItem[]

  @@index([usuarioId])
  @@index([direccionId])
  @@index([numero])
  @@map("orders")
}

/// Item dentro de una orden
model OrderItem {
  id        String   @id @default(cuid())
  cantidad  Int
  precioUnitario Int // Precio al momento de la orden en centavos
  subtotal  Int      // Cantidad × PrecioUnitario
  createdAt DateTime @default(now())

  // Foreign keys
  ordenId   String
  orden     Order    @relation(fields: [ordenId], references: [id], onDelete: Cascade)
  
  productoId String
  producto   Product  @relation(fields: [productoId], references: [id], onDelete: Restrict)

  @@unique([ordenId, productoId])
  @@index([ordenId])
  @@index([productoId])
  @@map("order_items")
}
