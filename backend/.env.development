JWT_REFRESH_SECRET=dev_refresh_secret_key_1234567890
JWT_REFRESH_EXPIRATION=604800

################################################################################
# üåê API SERVER
################################################################################
API_PORT=3000
API_VERSION=v1
NODE_ENV=development
API_URL=http://localhost:3000

################################################################################
# üîó CORS - Desarrollo Local
################################################################################
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5500,http://127.0.0.1:8000

################################################################################
# üìß EMAIL - Gmail o servicio local
################################################################################
# Usar cuenta de prueba o servicio como Mailtrap
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=465
SMTP_USER=your_mailtrap_user
